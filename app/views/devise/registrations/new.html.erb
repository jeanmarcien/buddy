<div class="d-flex justify-content-center align-items-center vh-100">
  <div>
    <h1 class="text-center mb-4">First, you need to create an account for yourself.</h1>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="row mb-4">

        <div class="col-md-6 text-center">
          <%= f.input :first_name,
                      label: "<strong>First Name</strong>".html_safe,
                      input_html: { class: "form-control text-center bg-white", autocomplete: "given-name" } %>
        </div>

        <div class="col-md-6 text-center">
          <%= f.input :last_name,
                      label: "<strong>Last Name</strong>".html_safe,
                      input_html: { class: "form-control text-center bg-white", autocomplete: "family-name" } %>
        </div>
      </div>

      <div class="mb-4 text-center">
        <%= f.input :email,
                    label: "<strong>Email</strong>".html_safe,
                    input_html: { class: "form-control text-center bg-white", autocomplete: "email" } %>
      </div>

      <div class="mb-4 text-center">
        <%= f.input :password,
                    label: "<strong>Password</strong>".html_safe,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { class: "form-control text-center bg-white", autocomplete: "new-password" } %>
      </div>

      <div class="mb-4 text-center">
        <%= f.input :password_confirmation,
                    label: "<strong>Confirm Password</strong>".html_safe,
                    input_html: { class: "form-control text-center bg-white", autocomplete: "new-password" } %>
      </div>

      <div class="text-center">
        <%= f.button :submit, "Sign up", class: "btn btn-primary px-5" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <p>Already have an account? <%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>
