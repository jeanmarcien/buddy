<div data-page-name="<%= page_name %>">
  <%= render "pages/navbar" %>
  <div class="container-fluid text-primary py-0">
    <div class="container py-5">
      <div class="row">
        <div class="col-12 col-lg-8 mx-auto text-center">
          <h1 class="display-4 display-md-5 fw-bold mb-4">Let's get you back to managing your pets.</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-10 col-md-8 col-lg-6 col-xl-4 mx-auto">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-4">
              <%= f.input :email,
                          label: "<strong>Email</strong>".html_safe,
                          autofocus: true,
                          input_html: { class: "form-control text-center bg-white", autocomplete: "email" } %>
            </div>
            <div class="mb-4">
              <%= f.input :password,
                          label: "<strong>Password</strong>".html_safe,
                          input_html: { class: "form-control text-center bg-white", autocomplete: "current-password" } %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="mb-4">
                <%= f.input :remember_me, as: :boolean,
                            label: "<strong>Remember me</strong>".html_safe,
                            input_html: { class: "form-check-input" } %>
              </div>
            <% end %>
            <div class="text-center">
              <%= f.button :submit, "Log in", class: "btn btn-primary rounded-pill btn-lg px-5 font-weight-bold" %>
            </div>
          <% end %>
          <div class="mt-3 text-center">
            <p>Don't have an account? <%= render "devise/shared/links" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
