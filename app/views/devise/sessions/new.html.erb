<div class="d-flex justify-content-center align-items-center vh-100">
  <div>
    <h1 class="text-center mb-4">Log in to your account</h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4 text-center">
        <%= f.input :email,
                    label: "<strong>Email</strong>".html_safe,
                    autofocus: true,
                    input_html: { class: "form-control text-center bg-white", autocomplete: "email" } %>
      </div>

      <div class="mb-4 text-center">
        <%= f.input :password,
                    label: "<strong>Password</strong>".html_safe,
                    input_html: { class: "form-control text-center bg-white", autocomplete: "current-password" } %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 text-center">
          <%= f.input :remember_me, as: :boolean, label: "<strong>Remember me</strong>".html_safe, input_html: { class: "form-check-input" } %>
        </div>
      <% end %>

      <div class="text-center">
        <%= f.button :submit, "Log in", class: "btn btn-primary px-5 font-weight-bold" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <p>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
    </div>
  </div>
</div>
