<div data-page-name="<%= page_name %>">
  <%= render "pages/navbar" %>
  <div class="d-flex justify-content-center align-items-center vh-100">
    <div>
      <h1 class="text-center mb-4">Forgot your password?</h1>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="mb-4 text-center">
          <%= f.input :email,
                      label: "<strong>Email</strong>".html_safe,
                      autofocus: true,
                      input_html: { class: "form-control text-center bg-white", autocomplete: "email" } %>
        </div>

        <div class="text-center">
          <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary px-5 font-weight-bold" %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <p>Remember your password? <%= link_to "Log in", new_session_path(resource_name) %></p>
      </div>
    </div>
  </div>
</div>
