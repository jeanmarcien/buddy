<div data-page-name="<%= page_name %>">
  <%= render "pages/navbar" %>
  <div class="container-fluid text-primary py-5">
    <div class="container py-5">
      <div class="row">
        <div class="col-12 col-lg-8 mx-auto text-center">
          <h1 class="display-4 display-md-5 fw-bold mb-4">Forgot your password?</h1>
          <p class="lead mb-4">No worries! Enter your email, and we'll send you instructions to reset it.</p>
        </div>
      </div>
      <div class="row">
        <div class="col-10 col-md-8 col-lg-6 col-xl-4 mx-auto">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>
            <div class="mb-4 text-center">
              <%= f.input :email,
                          label: "<strong>Email</strong>".html_safe,
                          autofocus: true,
                          input_html: { class: "form-control text-center bg-white", autocomplete: "email" } %>
            </div>
            <div class="text-center">
              <%= f.button :submit, "Send", class: "btn btn-primary rounded-pill btn-lg px-5 font-weight-bold" %>
            </div>
          <% end %>
          <div class="mt-3 text-center">
            <p>Remember your password? <%= link_to "Log in", new_session_path(resource_name), class: "text-primary" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
