<div class="logo-container">
  <%= image_tag 'buddy.png', class: 'img-fluid logo' %>
</div>

<div class="text-center mt-5 text-heavy">
  <h1>Hi, <%= current_user.first_name %>!</h1>
  <h1>Who would you like to manage today?</h1>
</div>

<div class="d-flex flex-column justify-content-center align-items-center mt-5">
  <div class="d-flex justify-content-center mb-4">
    <%= image_tag 'avatar/Padme.png', class: 'avatar' %>
    <%= image_tag 'avatar/Vandal.png', class: 'avatar' %>
    <%= image_tag 'avatar/Valentino.png', class: 'avatar' %>
  </div>

  <%= link_to new_pet_path, class: 'btn btn-circle mb-2' do %>
    <span class="plus-sign">+</span>
  <% end %>
  <p>Add a new pet</p>
</div>
<div class="container mt-4">
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-12 col-md-6 col-lg-4 mb-3">
        <div class="pet card">
          <h2 class="card-title"><%= pet.name %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
