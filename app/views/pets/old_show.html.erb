<div data-page-name="<%= page_name %>">
  <%= stylesheet_link_tag 'show', media: 'all', 'data-turbo-track': 'reload' %>
<%= render "navbar_dashboard" %>
<div class="dashboard">
  <div class="cards-container">
    <!-- Pet Profile Card -->
    <div class="card pet-profile-card">
      <%= link_to profile_path, class: "card-link" do %>
        <div class="text">Pet Profile</div>
      <% end %>
      <div class="arrows">
        <button class="arrow next" onclick="scrollToCard(1)">Next</button>
      </div>
    </div>
    <!-- Health Card -->
    <div class="card health-card" style="background-image: url(<%= asset_path('pethome/health.png') %>); background-position: center; background-repeat: no-repeat; background-size: cover; width: 100%;">
      <%= link_to health_path, class: "card-link" do %>
        <div class="text">Health</div>
      <% end %>
      <div class="arrows">
        <button class="arrow prev" onclick="scrollToCard(0)">Previous</button>
        <button class="arrow next" onclick="scrollToCard(2)">Next</button>
      </div>
    </div>

    <!-- Nutrition Card -->
      <div class="card nutrition-card" style="background-image: url(<%= asset_path('pethome/nutrition.png') %>); background-position: center; background-repeat: no-repeat; background-size: cover; width: 100%;">
      <%= link_to nutrition_path, class: "card-link" do %>
        <div class="text">Nutrition</div>
      <% end %>
      <div class="arrows">
        <button class="arrow prev" onclick="scrollToCard(1)">Previous</button>
        <button class="arrow next" onclick="scrollToCard(3)">Next</button>
      </div>
    </div>

    <!-- Activities Card -->
      <div class="card activities-card" style="background-image: url(<%= asset_path('pethome/activities.png') %>); background-position: center; background-repeat: no-repeat; background-size: cover; width: 100%;">
      <%= link_to activities_path, class: "card-link" do %>
        <div class="text">Activities</div>
      <% end %>
      <div class="arrows">
        <button class="arrow prev" onclick="scrollToCard(2)">Previous</button>
      </div>
    </div>
  </div>
</div>
</div>





<script>
  document.addEventListener("DOMContentLoaded", () => {
    const container = document.querySelector(".cards-container");

    window.scrollToCard = (index) => {
      const cardWidth = 963 + 185;
      container.scrollTo({
        left: index * cardWidth,
        behavior: "smooth",
      });
    };
  });
</script>
