<div data-page-name="<%= page_name %>">
  <%= render "pets/navbar_dashboard" %>
  <div class="container-fluid text-primary py-0">
    <div class="container py-5">
      <div class="row">
        <div class="col-12 text-center mb-4">
          <h1 class="display-4 display-md-5 fw-bold">Add a new activity for <%= @pet.name %></h1>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <%= form_with model: [@pet, @activity], local: true do |form| %>
            <div class="mb-3">
              <%= form.label :training_type, "Training Type", class: "form-label" %>
              <%= form.select :training_type, Activity::TRAINING_TYPES, { prompt: "Select Training Type" }, class: "form-select" %>
            </div>

            <div class="mb-3">
              <%= form.label :rating, "Rating (1-10)", class: "form-label" %>
              <%= form.number_field :rating, min: 1, max: 10, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :notes, "Notes", class: "form-label" %>
              <%= form.text_area :notes, rows: 3, class: "form-control" %>
            </div>

            <div class="d-flex justify-content-center gap-4">
              <div class="text-center">
                <%= link_to 'Cancel', pet_path(@pet), class: "btn btn-secondary rounded-pill" %>
              </div>
              <%= form.submit "Save Training Log", class: "btn btn-primary rounded-pill" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
